---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FeaturesCenter from '~/components/widgets/FeaturesCenter.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'InfiniData Lab',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <!-- <Hero> image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }} -->
  <Hero>
    <Fragment slot="title">
      <!--Free template for <span class="hidden xl:inline">creating websites with</span> -->
      <!--<span class="text-accent dark:text-white highlight"> Astro 4.0</span> + Tailwind CSS -->
      We are <span class="text-accent dark:text-white highlight"> InfiniData lab</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
      Affiliated with <span class="text-accent dark:text-white highlight">TU Delft</span>, the Netherlands, Infinidata Lab stands at the forefront of innovative data management technologies, blending the power of AI, Federated Learning, and Quantum Data Management to reshape the landscape of data analysis and security. 

      <span class="block mb-1 sm:hidden font-bold text-blue-600">AstroWind: Production-ready.</span>
       <br />By focusing on these key areas, Infinidata Lab aims to redefine what's possible, 
       making significant strides toward a future where data's full potential can be realized effectively, efficiently, and securely.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="about"
    title="What we focus on"
    subtitle="Empowering the Future of Data, Today"
    items={[
      {
        callToAction:{
            text:'AI in data lakes',
            href: 'topics/ai',
          },
        description:
          'Multimodal data & GPU acceleration',
        icon: 'tabler:brand-tailwind',
        pageurl:{href:'topics/ai'}
      },
      {
        callToAction:{
            text:'Federated Learning',
            href: 'topics/fl',
          },
        description:
          'Data privacy and security',
        icon: 'tabler:components',
        pageurl:{href:'topics/fl'}
      },
      {
        callToAction:{
            text:'Quantum Data Management',
            href: 'topics/quantum',
          },
        description:
          'Data Management for Quantum Computing and Quantum Internet',
        icon: 'tabler:list-check',
        pageurl:{href:'topics/quantum'}
      },
    ]}
  />


  <FeaturesCenter
      id="publications"
      title="Publications"
      columns={1}
      items={[
        {
          callToAction:{
            text:'Model Selection with Model Zoo via Graph Learning',
            href: 'amalur',
          },
          image:{
            src: '~/assets/images/icde-2024.png',
            alt: 'Colorful Image',
          },
          description: '<strong> Ziyu Li </strong>, Hilco van der Wilk, Danning Zhan, Megha Khosla, Alessandro Bozzon, Rihan Hai <br \> In Proceedings of the 2024 IEEE 40th International Conference on Data Engineering, ICDE 2024',
        },
        {
          callToAction:{
            text:'Amalur: the Convergence of Data Integration and Machine Learning',
            href: 'amalur',
          },
          paperurl: {
            href: 'https://ieeexplore.ieee.org/abstract/document/10412203',
          },
          image:{
            src: '~/assets/images/tkde.png',
            alt: 'Colorful Image',
          },
          description: '<strong> Ziyu Li</strong>, Wenbo Sun, Danning Zhan, Yan Kang, Lydia Chen, Alessandro Bozzon, and Rihan Hai. <br /> IEEE Transactions on Knowledge and Data Engineering (2024).'
        },
	{
          callToAction:{
            text:'SiloFuse: Cross-silo Synthetic Data Generation with Latent Tabular Diffusion Models',
            href: 'SiloFuse',
          },
          paperurl: {
            href: 'https://arxiv.org/abs/2404.03299',
          },
          image:{
            src: '~/assets/images/icde-2024.png',
            alt: 'Colorful Image',
          },
          description: '<strong> Aditya Shankar</strong>, Hans Brouwer, Rihan Hai, and Lydia Chen. <br /> In Proceedings of the 2024 IEEE 40th International Conference on Data Engineering, ICDE 2024'
        },
      ]}
    >
      <Fragment slot="bg">
        <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
      </Fragment>
    </FeaturesCenter>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`The digestion of our on-going projects
                `}
  />


  
</Layout>
